<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorPrimary"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_song" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_close" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/img_song"
        android:layout_toLeftOf="@+id/btn_close"
        android:layout_toRightOf="@+id/img_song"
        android:layout_toStartOf="@+id/btn_close"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:layout_toEndOf="@+id/img_song"
        android:layout_toLeftOf="@+id/ln_control"
        android:layout_toRightOf="@+id/img_song"
        android:layout_toStartOf="@+id/ln_control"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ln_control"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_close"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_skip_previous" />

        <ImageButton
            android:id="@+id/btn_pause_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_skip_next" />
    </LinearLayout>

</RelativeLayout>